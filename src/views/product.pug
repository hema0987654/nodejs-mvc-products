html
  head
    title= title || 'Product Page'
    link(rel="stylesheet", href="/style/styleproductByid.css")
    link(rel="stylesheet", href="https://unpkg.com/aos@2.3.1/dist/aos.css")
  body
    nav.navbar
      button#themeToggle Toggle Theme

    .container(data-aos="zoom-in")
      h1.page-title= title || 'Product Details'
      .product-card
        img(src=products.image, alt=products.title)
        h2= products.title
        p.price Price: #{products.price} $
        p.description= products.Description
        a.btn(href="/api/products") ðŸ”™ Back to Products

    script(src="https://unpkg.com/aos@2.3.1/dist/aos.js")
    script.
      AOS.init({ duration: 1000, once: true });

      const toggleBtn = document.getElementById('themeToggle');
      toggleBtn.addEventListener('click', () => {
        document.body.classList.toggle('light-mode');
        const isLight = document.body.classList.contains('light-mode');
        toggleBtn.textContent = isLight ? 'ðŸŒ™ Dark Mode' : 'â˜€ï¸ Light Mode';
        localStorage.setItem('theme', isLight ? 'light' : 'dark');
      });

      window.addEventListener('DOMContentLoaded', () => {
        const savedTheme = localStorage.getItem('theme');
        if (savedTheme === 'light') {
          document.body.classList.add('light-mode');
          toggleBtn.textContent = 'ðŸŒ™ Dark Mode';
        }
      });
